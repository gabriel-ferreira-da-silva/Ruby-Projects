<h1>Sign Up</h1>

<%=form_with model:@user, url: sign_up_path do |form|%>
    <div class="mb-3">
        <%= form.label :email%>
        <%= form.text_field :email , class:"form-control"%>
    </div>
    <div class="mb-3">
        <%= form.label :password%>
        <%= form.text_field :password, class:"form-control"%>
    </div>

    <div class="mb-3">
        <%= form.submit "sign Up", class: "btn btn-primary"%>
<%end%>
